<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Dreaming about Burgers</h1>
        <p class="lead">Chuck I had a double burger...</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-4 text-center">
            <h2>Burgers You Have Concieved...</h2>
            <h5 class="text-muted">but have not eaten</h5>
            <!-- list displaying un-eaten burgers-->
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless isDevoured}}
                        <li class="list-group-item row" data-id="{{id}}">
                            <p class="col-8">{{burger_name}}</p>
                            <button type="button" class="btn btn-success col-4 eat" data-id="{{id}}">Eat Me!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4">
            <form>
                <div class="form-group">
                    <label for="burger-name">Enter the name of a burger you wish to DEVOUR!</label>
                    <input type="text" class="form-control" id="burger-name">
                    <small id='length' class='form-text text-danger'></small>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="burger">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-4">
            <h2>Eaten Burgers</h2>
            <ul class="list-group">
                {{#each burgers}}
                    {{#if isDevoured}}
                        <li class="list-group-item" data-id="{{id}}">
                            <p>{{burger_name}}</p>
                            <button type="button" class="btn btn-success make" data-id="{{id}}">Make Another!</button>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>