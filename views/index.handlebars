<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Dreaming about Burgers</h1>
        <p class="lead">Chuck I had a double burger...</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-5 text-center">
            <h2>Burgers You Have Concieved...</h2>
            <h5 class="text-muted">but have not eaten</h5>
            <!-- list displaying un-eaten burgers-->
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless isDevoured}}
                        <li class="list-group-item row">
                            <p class="col-8">Name: {{burger_name}}</p>
                            <button type="button" class="btn btn-success col-4" id="{{id}}">Eat Me!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-2">

        </div>
        <div class="col-5">
            <h2>Eaten Burgers</h2>
            <ul class="list-group">
                {{#each burgers}}
                    {{#if isDevoured}}
                        <li class="list-group-item d-flex justify-content-center">
                            <p>Name: {{burger_name}}</p>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>