<div class="jumbotron-fluid my-4">
    <div class="container text-white">
        <div class="row">
            <h1 class="display-4">Make some Burgers!</h1>
        </div>
    </div>
</div>
<div class="container text-white">
    <div class="row">
        <div class="col-4 text-center">
            <h2>Burgers You Have Concieved...</h2>
            <h5 class="text-muted">but have not eaten</h5>
            <!-- list displaying un-eaten burgers-->
            <ul class="list-group">
                {{#each burgers}}
                {{#unless isDevoured}}
                <li class="list-group-item bg-transparent burger-container" data-id="{{id}}">
                    <div class="row">
                        <div class="burger-composite">
                            <img src="assets/img/topBun.png" class="top-bun" style="width: 100%">
                            <img src="assets/img/burger.png" class="burger" style="width: 100%">
                            <img src="assets/img/buttomBun.png" class="bottom-bun" style="width: 100%">
                        </div>
                        <div class="container-fluid col-sm" data-id="{{id}}">
                            <p class="col align-self-center name">
                                {{burger_name}}
                            </p>
                        </div>
                    </div>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4">
            <form>
                <div class="form-group">
                    <label for="burger-name">Enter the name of a burger you wish to DEVOUR!</label>
                    <input type="text" class="form-control" id="burger-name">
                    <small id='length' class='form-text text-danger'></small>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="burger">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-4">
            <h2>Eaten Burgers</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#if isDevoured}}
                <li class="list-group-item" data-id="{{id}}">
                    <p>{{burger_name}}</p>
                    <button type="button" class="btn btn-success make" data-id="{{id}}">Make Another!</button>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>